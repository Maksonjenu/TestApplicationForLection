<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="Пример WPF" Height="350" Width="250"
        
        >
    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="20"/>
            <RowDefinition/>
        </Grid.RowDefinitions>



        <Grid Grid.Row="1">


            <StackPanel Orientation="Vertical">
                <TextBox Margin="5" Height="30" Name="InputTextBox" Text="asd"/>
                <Button Content="ASD 1" Margin="10" Height="30" Click="Button_Click"/>
                <Button Content="delete" Margin="10" Height="30" Click="Button_Click_1"/>

              

                <ListBox Height="150" SelectionChanged="ComboBoxBox_SelectionChanged" Name="ListBoxBox"/>

            </StackPanel>

            

        </Grid>
        
        <Menu Grid.Row="0">
            <MenuItem Header="File"/>
        </Menu>

    </Grid>
</Window>
