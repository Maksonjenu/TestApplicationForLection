<Window x:Class="BankApp_Cooler.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BankApp_Cooler"
        mc:Ignorable="d"
        Title="MainWindow" Height="300" Width="400">
    <Grid>
        <StackPanel>
            <TextBlock Name="Balance" Text="{Binding Path=Sum, Mode=TwoWay}"/>
                <StackPanel>
                <Button Click="AddTwo_Click" Height="20" Width="90" Content="+2"/>
                <Button Click="SubTwo_Click" Height="20" Width="90" Content="-2"/>

                <TextBox Height="210" Name="logField" VerticalScrollBarVisibility="Visible"/>

                <Canvas Name="QQQ"></Canvas>
            </StackPanel>
            
        </StackPanel>
    </Grid>
</Window>
